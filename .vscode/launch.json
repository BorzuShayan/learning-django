{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-msedge",
      "name": "Launch Django App in Edge",
      "request": "launch",
      "runtimeArgs": [
        "--remote-debugging-port=9222"
      ],
      "url": "http://127.0.0.1:8000",
      "webRoot": "${workspaceFolder}",
      "preLaunchTask": "Run Django Server"
    },
    {
      "type": "vscode-edge-devtools.debug",
      "name": "Attach Edge DevTools",
      "request": "attach",
      "url": "http://127.0.0.1:8000"
    },
    {
      "type": "pwa-msedge",
      "name": "Launch Microsoft Edge",
      "request": "launch",
      "runtimeArgs": [
        "--remote-debugging-port=9222"
      ],
      "url": "c:\\Users\\borzu\\.vscode\\extensions\\ms-edgedevtools.vscode-edge-devtools-2.1.9\\out\\startpage\\index.html", // Provide your project's url to finish configuring
      "presentation": {
        "hidden": true
      }
    },
    {
      "type": "pwa-msedge",
      "name": "Launch Microsoft Edge in headless mode",
      "request": "launch",
      "runtimeArgs": [
        "--headless",
        "--remote-debugging-port=9222"
      ],
      "url": "http://127.0.0.1:8000"
      "presentation": {
        "hidden": true
      }
    },
    {
      "type": "vscode-edge-devtools.debug",
      "name": "Open Edge DevTools",
      "request": "attach",
      "url": "http://127.0.0.1:8000"
      "presentation": {
        "hidden": true
      }
    }
  ],
  "compounds": [
    {
      "name": "Launch Django and Attach DevTools",
      "configurations": [
        "Launch Django App in Edge",
        "Attach Edge DevTools"
      ]
    },
    {
      "name": "Launch Edge Headless and attach DevTools",
      "configurations": [
        "Launch Microsoft Edge in headless mode",
        "Open Edge DevTools"
      ]
    },
    {
      "name": "Launch Edge and attach DevTools",
      "configurations": [
        "Launch Microsoft Edge",
        "Open Edge DevTools"
      ]
    }
  ]
}